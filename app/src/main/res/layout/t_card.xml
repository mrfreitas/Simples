<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    android:layout_marginBottom="10dp">


        <android.support.design.widget.CoordinatorLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:id="@+id/coordinatorDetail"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@color/white"
            android:paddingBottom="15dp"
            >
            <RelativeLayout
                android:id="@+id/partner_list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/presentation_image"
                    android:src="@drawable/placeholder"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/presentation_image">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:id="@+id/logo"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_marginRight="@dimen/logo_margin"
                        android:layout_marginEnd="@dimen/logo_margin"
                        android:layout_marginStart="@dimen/logo_margin"
                        android:layout_marginLeft="@dimen/logo_margin"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                    <TextView
                        android:text="Name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/partnerName"
                        android:textColor="@color/text_tittle"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:paddingRight="5dp"
                        android:paddingEnd="5dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/logo"
                        android:layout_toStartOf="@+id/logo" />
                    <TextView
                        android:text="Morada"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/locationTitle"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:paddingRight="5dp"
                        android:paddingEnd="5dp"
                        android:layout_below="@+id/partnerName"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/logo"
                        android:layout_toStartOf="@+id/logo" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/discount_round"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="16dp"
                android:clickable="false"
                android:background="@drawable/discount_bt"
                app:layout_anchor="@id/presentation_image"
                app:layout_anchorGravity="bottom|left|start"
                app:elevation="0dp"
                app:borderWidth="0dp"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_vertical|center_horizontal"
                />

        </android.support.design.widget.CoordinatorLayout>

</android.support.v7.widget.CardView>